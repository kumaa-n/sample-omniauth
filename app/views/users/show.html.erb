<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-md w-96">
    <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">マイページ</h1>

    <div class="space-y-4 mb-8">
      <% if @current_authentication %>
        <div class="border-b pb-4">
          <p class="text-sm text-gray-600 mb-1">認証プロバイダ</p>
          <p class="text-lg font-semibold text-gray-800 capitalize"><%= @current_authentication.provider %></p>
        </div>
        <div class="border-b pb-4">
          <p class="text-sm text-gray-600 mb-1">ID</p>
          <p class="text-lg font-semibold text-gray-800"><%= @current_authentication.uid %></p>
        </div>
        <div class="border-b pb-4">
          <p class="text-sm text-gray-600 mb-1">名前</p>
          <p class="text-lg font-semibold text-gray-800"><%= @current_authentication.name %></p>
        </div>
      <% end %>

      <div class="border-b pb-4">
        <p class="text-sm text-gray-600 mb-1">メールアドレス</p>
        <p class="text-lg font-semibold text-gray-800"><%= @user.email %></p>
      </div>

      <div class="pb-4">
        <p class="text-sm text-gray-600 mb-2">連携アカウント</p>
        <div class="space-y-2">
          <% @user.authentications.each do |auth| %>
            <span class="text-gray-700 capitalize"><%= auth.provider %></span>
          <% end %>
        </div>
      </div>
    </div>

    <%= button_to "ログアウト", logout_path, method: :get, class: "w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-4 rounded-lg transition duration-200" %>
  </div>
</div>
